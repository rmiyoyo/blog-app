<div>
  <%= render partial: 'shared/user', locals: { user: @user } %>

  <% @user.three_recent_posts.each do |post| %>
    <%= render partial: 'shared/post', locals: { post: post } %>

    <% post.five_recent_comments.each do |comment| %>
      <%= render partial: 'shared/comment', locals: { comment: comment } %>
    <% end %>    

  <% end %>

  <button class="mx-auto font-bold w-5/12 md:w-1/10 mb-5 border-solid border-4 border-gray-600">Pagination</button>
</div>
